<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-3">
                <a href="add-farmer" class="btn btn-success">Register</a>
            </div>
        </div>
        <div class="row">
            {{#each farmers}}
            <div class="col-md-3 mt-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{this.id}}</h6>
                        <p class="card-text">{{this.address}}</p>
                        <a href="/add-milk/{{this._id}}" class="btn btn-primary">Milk</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>